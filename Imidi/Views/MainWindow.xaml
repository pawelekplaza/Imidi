<Window x:Class="Imidi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Imidi"
        xmlns:commands="clr-namespace:Imidi.Commands"
        xmlns:controls="clr-namespace:Imidi.Controls"
        xmlns:viewModels="clr-namespace:Imidi.ViewModels"
        xmlns:converters="clr-namespace:Imidi.Converters"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="imidi" Height="480" Width="720">

    <Window.Resources>
        <converters:DivideConverter x:Key="DivideConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <Window.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="M"
                    Command="{x:Static commands:MainWorkflowCommands.MaximizeOrNormalizeWindow}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        <KeyBinding Modifiers="Ctrl" Key="X"
                    Command="{x:Static commands:MainWorkflowCommands.CloseWindow}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
    </Window.InputBindings>

    <Window.Template>
        <ControlTemplate>
            <Border Padding="{Binding MainPadding}">
                <Grid Background="{DynamicResource BackgroundDarkThemeBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- Current path -->
                    <controls:PathControl x:Name="pathControl"/>
                    
                    <!-- Files and folders -->
                    <ItemsControl ItemsSource="{Binding FileEntries, ElementName=pathControl}"
                                  Grid.Row="1">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"></WrapPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding }"
                                           Margin="5 0"
                                           Width="{Binding ActualWidth, ElementName=pathControl, Converter={StaticResource DivideConverter}, ConverterParameter='4'}"
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </Grid>
            </Border>
        </ControlTemplate>
    </Window.Template>
    
</Window>
